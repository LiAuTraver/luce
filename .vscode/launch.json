{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug current target",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        "--log",
        "${workspaceFolder}/luce.log",
        "--image",
        "${workspaceFolder}/data/flight.bin",
      ],
      "stopAtEntry": false,
      "cwd": "${command:cmake.launchTargetDirectory}",
      "environment": [],
      "console": "internalConsole"
    }
  ]
}